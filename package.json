{
  "name": "@lukaskj/pretty-log",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "init:husky": "bunx husky init",
    "build": "bun run scripts/build.ts",
    "declaration": "bunx tsc -p tsconfig.build.json --outDir dist --declaration --emitDeclarationOnly",
    "build:all": "bun run declaration && bun run scripts/build.ts",
    "dev": "bun run src/index.ts",
    "lint": "tsc -p . --noEmit && biome lint --write",
    "format": "biome format --write",
    "test:cov": "bun run test --coverage",
    "test": "bun test --env-file .env.test",
    "example": "cat test/fileExamples/multilineJson.txt | bun run src/index.ts -t \">\""
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "secure-json-parse": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@faker-js/faker": "^9.9.0",
    "@types/bun": "latest",
    "@types/node": "^24.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bun format",
      "bun lint"
    ]
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "bin": {
    "pretty-log": "dist/index.mjs"
  },
  "engines": {
    "node": ">=23",
    "bun": ">= 1.2.20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukaskj/pretty-log.git"
  },
  "bugs": {
    "url": "https://github.com/lukaskj/pretty-log/issues"
  },
  "homepage": "https://github.com/lukaskj/pretty-log#readme",
  "files": [
    "dist/**/*",
    "!**/test/**",
    "!node_modules"
  ]
}
